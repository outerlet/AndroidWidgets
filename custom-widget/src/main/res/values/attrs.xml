<?xml version="1.0" encoding="utf-8"?>
<resources>
	<attr name="item_width" format="dimension" />
	<attr name="overlay_visible" format="boolean" />
	<attr name="background_color" format="color" />
	<attr name="overlay_color" format="color" />

	<declare-styleable name="HorizontalPicker">
		<attr name="item_width" />
		<attr name="overlay_visible" />
		<attr name="background_color" />
		<attr name="overlay_color" />
	</declare-styleable>

	<declare-styleable name="RecyclerHorizontalPicker">
		<attr name="item_width" />
		<attr name="overlay_visible" />
		<attr name="background_color" />
		<attr name="overlay_color" />
	</declare-styleable>

	<declare-styleable name="HorizontalWheel">
		<!-- 目盛りの数。デフォルトはR.integer.default_scales_number -->
		<attr name="scales_number" format="integer" />
		<!-- ポインタ(中央線)の可視状態。デフォルトはtrue -->
		<attr name="pointer_visible" format="boolean" />
		<!-- ポインタ(中央線)の色。デフォルトはR.color.default_pointer_color -->
		<attr name="pointer_color" format="color" />
		<!-- 目盛りの色。デフォルトはdefault_scale_color -->
		<attr name="scale_color" format="color" />
		<!-- ポインタ(中央線)の幅。デフォルトはR.dimen.default_pointer_width -->
		<attr name="pointer_width" format="dimension" />
		<!-- 目盛りの幅。デフォルトはR.dimen.default_scale_width -->
		<attr name="scale_width" format="dimension" />
		<!-- 取得できる値は0-360の範囲内か。trueなら360の次は0になるが、falseなら0未満や361以上の値も取得される。デフォルトはtrue -->
		<attr name="value_limited" format="boolean" />
		<!-- ホイール操作が終わった後に近くの目盛りにスナップするか。デフォルトはfalse -->
		<attr name="snap_scale" format="boolean" />
	</declare-styleable>

</resources>
